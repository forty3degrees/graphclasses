package teo.isgci.core;

import teo.isgci.data.services.IDataProvider;
import teo.isgci.data.services.XmlDataProvider;
import teo.isgci.drawing.IDrawingService;
import teo.isgci.drawing.YFilesDrawingService;

public class App {
	public static App Current = null;
    
    private final IDataProvider dataProvider;
    public IDataProvider getDataProvider() {
    	return this.dataProvider;
    }
    private final IDrawingService drawingService;
    public IDrawingService getDrawingService() {
    	return this.drawingService;
    }
	
	public App() {
		this.dataProvider = new XmlDataProvider();
		this.drawingService = new YFilesDrawingService();
	}
}
